<script>
var onchange = function (){
  var region = document.getElementById("region").value;

var zodiac = document.getElementById("city");
zodiac.options.length = 0;

if (region == "East Asia") {

    var option = document.createElement("option");
    option.text = "Qsaka";
    option.value = "Qsaka";
    zodiac.add(option);

    var option = document.createElement("option");
    option.text = "Seoul";
    option.value = "Seoul";
    zodiac.add(option);

    zodiac.disabled = false;
    
} else if (region == "South-east Asia") {

    var option = document.createElement("option");
    option.text = "Cebu";
    option.value = "Cebu";
    zodiac.add(option);

    var option = document.createElement("option");
    option.text = "Singapore";
    option.value = "Singapore";
    zodiac.add(option);

    zodiac.disabled = false;

} else if (region == "Americas") {

    var option = document.createElement("option");
    option.text = "Los Aageles";
    option.value = "Los Aageles";
    zodiac.add(option);

    var option = document.createElement("option");
    option.text = "Boston";
    option.value = "Boston";
    zodiac.add(option);
    
} else {
    zodiac.disabled = true;
}
}
</script>







